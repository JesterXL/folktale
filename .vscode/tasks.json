{
  "version": "0.1.0",
  "tasks": [
    {
      "taskName": "tsc-watch",
      "command": "./node_modules/.bin/tsc",
      "isShellCommand": true,
      "args": ["-w", "-p", ".", "--noEmit"],
      "showOutput": "silent",
      "isBackground": true,
      "problemMatcher": "$tsc-watch"
    },
    {
      "taskName": "tslint",
      "command": "./node_modules/.bin/tslint",
      "args": ["--project", "tsconfig.json", "--type-check", "-t", "verbose"],
      "problemMatcher": "$tslint5",
      "showOutput": "silent",
      "isShellCommand": true
    }
  ]
}
